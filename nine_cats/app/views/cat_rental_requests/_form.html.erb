
<% if action == :edit %>
  <% action_url = cat_rental_request_url(@cat_rental_request) %>
<% else %>
  <% action_url = cat_rental_requests_url %>
<% end %>


<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
<br>

<% if action == :edit %>
<h2>Cat name: <%= cat_rental_request.cat.name %> </h2>
<% else %>
<label  for="name">Select which cat you want, bro.</label>
<select id="name" name="cat_rental_request[cat_id]">
    <option disabled>-- Select a Cat, yo. --</option>
    <% Cat.all.each do |cat| %>
          <option value="<% cat.id %>"> <%= cat.name %> </option>
    <% end %>
</select>
<% end %>
<br>

<input type="date" name="cat_rental_request[start_date]" value="<%= cat_rental_request.start_date %>">
<input type="date" name="cat_rental_request[end_date]" value="<%= cat_rental_request.end_date %>">
<br>

<input type="submit" value="add to cat rental requests">
</form>